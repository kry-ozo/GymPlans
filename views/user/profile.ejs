<% layout("layout/boilerplate.ejs")%>
<section class="plan-user">
  <div class="container">
    <div class="profile-menu">
      <h1 class="profile-name"><%=currentUser.username%></h1>
    </div>
      <%if(userPlans.length){%>
      <div class="mt-1 mb-3 plan-column plansSection">
          <%for(let p of userPlans){%>
            <div class="plan">
              <div class= "mt-4 plan-card text-light">
                  <div class="card-body">
                    <div class="card-headers">
                      <h3 class="text-center"><%=p.type%></h3>
                      <h4 class="text-center"><%=p.difficultyLevel%></h4>
                    </div>
                    <p class="card-text">Author: <%=currentUser.username%></p>
                    <p class="card-text"><%=p.description%></p>
                    <a href="/allPlans/<%=p.id%>" class="button-card button-color text-light  button-color text-light card-btn ">Read More!</a>
                  </div>
                </div>
          </div>
          <%}%>
      
        </div>
        <%}else{%>
          
          <div class="no-plan-section">
            <h1>You had never post any plan!</h1>
          </div>
          <%}%>
  </div>
</section>